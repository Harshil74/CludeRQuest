<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clue2">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_below="@id/toolbar"
       android:layout_above="@id/nextIn"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/program3Text"
               android:layout_margin="8dp"
               android:padding="8dp"
               android:text="@string/demo"
               android:textSize="20sp"
               />
       </RelativeLayout>
   </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/scan3btn"
        android:text="@string/nextIN"
        android:id="@+id/nextIn"
        android:textSize="15dp"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scan3btn"
        android:text="@string/scan"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="20dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/next3btn"
        android:textColor="@android:color/white"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/next3btn"
        android:textSize="20dp"
        android:text="@string/next"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        />
</RelativeLayout>